        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" 
                    VerticalAlignment="Center" Margin="129,-194,110,203" HorizontalAlignment="Center" Height="60" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
        </StackPanel>
        <TextBlock  FontSize="27.5" Foreground="Black" TextAlignment="Center" Grid.ColumnSpan="3" Grid.Column="1" Margin="174,0,151,0" Grid.Row="1" FontFamily="Segoe UI Black" FontWeight="Normal" FontStyle="Italic"> <Run Text=" Мероприятия"/></TextBlock>
