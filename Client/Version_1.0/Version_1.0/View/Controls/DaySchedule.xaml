<UserControl x:Class="Version_1._0.View.Controls.DaySchedule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Version_1._0.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock TextAlignment ="Center" Text="{Binding DayOfWeek}" Grid.Row="0"></TextBlock>
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Visible">
                <ListView ItemsSource ="{Binding LessonList}" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="70" Header="Начало"></GridViewColumn>
                            <GridViewColumn Width="200" Header="Предмет"></GridViewColumn>
                            <GridViewColumn Width="70" Header="Аудитория"></GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
            
    </Grid>
</UserControl>
